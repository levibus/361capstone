namespace _361capstone.Pages;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using static System.Runtime.InteropServices.JavaScript.JSType;
using System.Data.SqlClient;
using System.Data;
using Microsoft.AspNetCore.Identity;

public class SearchAccessor
{
    string test = "5";
    public string SearchSKU(string test)
    {
        int code = Int32.Parse(test);
        object itemName = "not found";
        string query = "SELECT p.itemName FROM Product as p WHERE p.SKU = @code ";

        
        using (SqlConnection conn = new SqlConnection())
        {
            conn.ConnectionString = "Server=DESKTOP-QEQG0AR;Database=master;Trusted_Connection=true";
            try
            {
                conn.Open();
            }
            catch 
            {
                return "null"; // error in connection
            }

            using (SqlCommand cmd = new SqlCommand(query, conn))
            {
                cmd.Parameters.AddWithValue("@code", code);

                itemName = cmd.ExecuteScalar();
                if (itemName == null)
                {
                    itemName = "Item not found"; 
                }
                
            }
            conn.Close();
        }
        return (string)itemName;
    }
}
